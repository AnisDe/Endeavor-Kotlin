<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="7dp"
        android:paddingRight="7dp"
    android:background="@drawable/gradiant_splash"
        tools:context=".ui.Level1Activity">

        <TextView
            android:text="Questions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtTotalQuestions"
            android:textStyle="bold"
            android:fontFamily="@font/lato_bold"
            android:textAlignment="center"
            android:textSize="28sp"
            android:textColor="#009688"
            android:paddingStart="10dp"
            android:paddingBottom="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/txtScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="22sp"
            android:fontFamily="@font/lato_regular"
            android:textColor="#000"
            android:textAlignment="center"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="5dp"
            android:text="Score 1/10"/>
        <TextView
            android:id="@+id/txtCorrect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="22sp"
            android:textColor="#3F51B5"
            android:textAlignment="center"
            android:layout_marginEnd="10dp"
            android:fontFamily="@font/lato_regular"
            android:layout_marginTop="5dp"
            android:text="Correct: 6"/>
        <TextView
            android:id="@+id/txtWrong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="22sp"
            android:fontFamily="@font/lato_regular"
            android:textColor="#9C27B0"
            android:textAlignment="center"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="5dp"
            android:text="Wrong: 6"/>
        <TextView
            android:id="@+id/txtViewTimer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:textColor="#000"
            android:fontFamily="@font/lato_regular"
            android:textAlignment="center"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="5dp"
            android:text="00:30"/>





    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="30dp">

        <TextView
            android:id="@+id/textViewQ"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dino code Academy is a great to do any think for now"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textSize="25sp"
            android:background="@drawable/confirm_button_background"
            android:fontFamily="@font/gilroy_bold"
            android:padding="10dp"
            android:textColor="#000" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:orientation="vertical">

        <RadioGroup
            android:id="@+id/radio_group"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <RadioButton
                android:id="@+id/radio_botton1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/buttons_background"
                android:textColor="#000"
                android:textSize="22sp"
                android:fontFamily="@font/lato_regular"
                android:padding="12sp"
                android:textAlignment="center"
                android:layout_marginTop="10dp"
                android:button="@null"
                android:freezesText="true"
                android:text="RadioButton" />

            <RadioButton
                android:id="@+id/radio_botton2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#000"
                android:textAlignment="center"
                android:textSize="22sp"
                android:fontFamily="@font/lato_regular"
                android:padding="12sp"
                android:background="@drawable/buttons_background"
                android:layout_marginTop="10dp"
                android:button="@null"
                android:freezesText="true"
                android:text="RadioButton" />

            <RadioButton
                android:id="@+id/radio_botton3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#000"
                android:textAlignment="center"
                android:textSize="22sp"
                android:fontFamily="@font/lato_regular"
                android:background="@drawable/buttons_background"
                android:padding="12sp"
                android:layout_marginTop="10dp"
                android:button="@null"
                android:freezesText="true"
                android:text="RadioButton" />

            <RadioButton
                android:id="@+id/radio_botton4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#000"
                android:textAlignment="center"
                android:textSize="22sp"
                android:fontFamily="@font/lato_regular"
                android:background="@drawable/buttons_background"
                android:padding="12sp"
                android:layout_marginTop="10dp"
                android:button="@null"
                android:freezesText="true"
                android:text="RadioButton" />
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/buttonNLevel"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="25sp"
            android:textAllCaps="false"
            android:backgroundTint="@color/colorPrimaryFade2"
            android:text="NEXT" />
    </LinearLayout>
</LinearLayout>

